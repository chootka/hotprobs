@font-face
   font-family phaisarn
   font-style normal
   src url(/fonts/phaisarn.ttf)
@font-face
   font-family jai
   font-style normal
   src url(/fonts/jai.ttf)
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
body
	margin  0
	padding  0
	background rgb(0,0,0)
	font-family phaisarn
p
	color #eee
	text-align center
	font-size .9em
	line-height 1.25em	
.off-white
	color #eee
	font-style italic
.green
	color #00ff24
	font-style italic
.hot-pink
	color #ff07a5
	font-style italic
.fourohfour
	margin 0 auto
	width 320px
	a
		color #00ff24
		text-align center
		text-decoration none
		width 320px
	img
		position absolute
		bottom 0
		left 0
		width 320px

#header
	color #ff07a5
	font-family jai
	font-size 2em
	letter-spacing .08em
	text-align center
	margin 5px auto
	width 90%
	cursor pointer
#login
	margin-top 13px
	text-align center
	p
		padding 0
		margin 0
	#screenname
		margin 10px auto
		width 200px
		height 20px
		font-size 13px
		color #ff07a5
		background-color #2b292a
		border 0
		border-top 1px solid #434243
		border-radius 0
		text-align center
	#screenname:focus
		outline 0px solid transparent
		[contenteditable="true"].singleLine
			white-space nowrap
		    width 200px
		    overflow hidden
		[contenteditable="true"].singleLine br
			display none
		[contenteditable="true"].singleLine *
			display inline
			white-space nowrap
	#buttonWrapper
		text-align center
		width 210px
		margin 0 auto
		button
			position relative
			margin-bottom 5px
			padding 7px 10px
			border 0
			background rgb(20,20,20)
			border-top 1px solid #434243
			color #ff07a5
			font-family phaisarn
			font-size 13px
			font-weight bold
			text-decoration none
			text-align center
			cursor pointer
			width 210px
#about
	margin 15px auto
	width 93%
#chat
	margin 10px auto
	padding 0
	width 100%
	#conversation
		position relative
		margin 0 auto
		padding 10px
		height 300px
		width 90%
		color #eee
		background-color #2b292a
		border-top 1px solid #434243
		overflow-y auto
		#incoming
			position absolute
			bottom 0
			width 90%
			max-height 100%
			font-size 13px
			line-height 18px
	#sendMessage
		margin 10px auto
		width 90%
	textarea
		resize none
		border 0
		margin 6px -8px
		padding 7px
		width 100%
		font-family phaisarn
		font-size 13px
		line-height 18px
		color #eee
		background-color #2b292a
		border-top 1px solid #434243
		border-radius 0